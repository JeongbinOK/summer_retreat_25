<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Purchases - Church Retreat 2025</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand { font-weight: bold; }
        .balance-badge { font-size: 1.1em; }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar', { user: user }) %>

    <main class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <% if (teamInfo) { %>
                            <%= teamInfo.name %> - Purchase History
                        <% } else { %>
                            Team Purchase History
                        <% } %>
                    </h2>
                    <a href="/user/team" class="btn btn-outline-primary">Back to Team</a>
                </div>
                
                <% if (!teamInfo) { %>
                    <div class="alert alert-info">
                        <h5>No Team Assigned</h5>
                        <p>You haven't been assigned to a team yet. Please contact an administrator.</p>
                    </div>
                <% } else if (orders.length === 0) { %>
                    <div class="alert alert-info">
                        <h5>No Purchases Yet</h5>
                        <p>Your team hasn't made any purchases yet. Visit the <a href="/store">store</a> to start shopping!</p>
                    </div>
                <% } else { %>
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Team Purchase History</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Product</th>
                                            <th>Purchased By</th>
                                            <th>Quantity</th>
                                            <th>Total Price</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(order => { %>
                                            <tr>
                                                <td><%= formatDate(order.created_at) %></td>
                                                <td>
                                                    <strong><%= order.product_name %></strong>
                                                    <% if (order.description) { %>
                                                        <br><small class="text-muted"><%= order.description %></small>
                                                    <% } %>
                                                </td>
                                                <td><%= order.username %></td>
                                                <td><%= order.quantity %></td>
                                                <td>$<%= order.total_price %></td>
                                                <td>
                                                    <% if (order.verified) { %>
                                                        <span class="badge bg-success">Verified</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning">Pending</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <div class="mt-4">
                                <h6>Summary</h6>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5><%= orders.length %></h5>
                                                <small>Total Orders</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>$<%= orders.reduce((sum, order) => sum + order.total_price, 0) %></h5>
                                                <small>Total Spent</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5><%= orders.filter(order => order.verified).length %></h5>
                                                <small>Verified Orders</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5><%= orders.filter(order => !order.verified).length %></h5>
                                                <small>Pending Orders</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function logout() {
            try {
                const response = await fetch('/auth/logout', { method: 'POST' });
                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }
    </script>
</body>
</html>
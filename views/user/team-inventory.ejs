<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Inventory - Church Retreat 2025</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand { font-weight: bold; }
        .balance-badge { font-size: 1.1em; }
        .inventory-item { border-left: 4px solid #007bff; }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar', { user: user }) %>

    <main class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <% if (teamInfo) { %>
                            <%= teamInfo.name %> - Inventory
                        <% } else { %>
                            Team Inventory
                        <% } %>
                    </h2>
                    <a href="/user/team" class="btn btn-outline-primary">Back to Team</a>
                </div>
                
                <% if (!teamInfo) { %>
                    <div class="alert alert-info">
                        <h5>No Team Assigned</h5>
                        <p>You haven't been assigned to a team yet. Please contact an administrator.</p>
                    </div>
                <% } else if (inventory.length === 0) { %>
                    <div class="alert alert-info">
                        <h5>No Items in Inventory</h5>
                        <p>Your team doesn't have any items yet. Purchase items from the <a href="/store">store</a> or receive donations from other teams!</p>
                    </div>
                <% } else { %>
                    <!-- Inventory Summary -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5><%= inventory.reduce((sum, item) => sum + item.total_quantity, 0) %></h5>
                                    <small>Total Items</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5><%= inventory.length %></h5>
                                    <small>Item Types</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h5>$<%= inventory.reduce((sum, item) => sum + (item.total_quantity * item.price), 0) %></h5>
                                    <small>Total Value</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h5><%= [...new Set(inventory.map(item => item.category))].length %></h5>
                                    <small>Categories</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Inventory Items by Category -->
                    <% 
                    const categories = [...new Set(inventory.map(item => item.category))];
                    categories.forEach(category => { 
                    %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0 text-capitalize"><%= category %>s</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <% 
                                    const categoryItems = inventory.filter(item => item.category === category);
                                    categoryItems.forEach(item => { 
                                    %>
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card inventory-item">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <h6 class="card-title"><%= item.product_name %></h6>
                                                        <span class="badge bg-primary fs-6"><%= item.total_quantity %></span>
                                                    </div>
                                                    <% if (item.description) { %>
                                                        <p class="card-text text-muted small"><%= item.description %></p>
                                                    <% } %>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <small class="text-muted">Unit Value:</small><br>
                                                            <strong>$<%= item.price %></strong>
                                                        </div>
                                                        <div class="col-6">
                                                            <small class="text-muted">Total Value:</small><br>
                                                            <strong>$<%= item.total_quantity * item.price %></strong>
                                                        </div>
                                                    </div>
                                                    <div class="mt-2">
                                                        <small class="text-muted">Last obtained: <%= formatDate(item.last_obtained) %></small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    <% }); %>

                    <!-- Inventory History -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Inventory History</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Source</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% inventoryHistory.forEach(entry => { %>
                                            <tr>
                                                <td><%= formatDate(entry.created_at) %></td>
                                                <td><%= entry.product_name %></td>
                                                <td><%= entry.quantity %></td>
                                                <td>
                                                    <% if (entry.obtained_from === 'purchase') { %>
                                                        <span class="badge bg-success">Purchase</span>
                                                    <% } else if (entry.obtained_from === 'donation') { %>
                                                        <span class="badge bg-info">Donation</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary"><%= entry.obtained_from %></span>
                                                    <% } %>
                                                </td>
                                                <td>$<%= entry.quantity * entry.price %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function logout() {
            try {
                const response = await fetch('/auth/logout', { method: 'POST' });
                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }
    </script>
</body>
</html>
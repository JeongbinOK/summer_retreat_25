<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Team - Church Retreat 2025</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand { font-weight: bold; }
        .balance-badge { font-size: 1.1em; }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar', { user: user }) %>

    <main class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <% if (teamInfo) { %>
                                <%= teamInfo.name %>
                            <% } else { %>
                                No Team Assigned
                            <% } %>
                        </h5>
                        <% if (teamInfo) { %>
                            <div class="btn-group" role="group">
                                <a href="/user/team-inventory" class="btn btn-primary btn-sm">
                                    Team Inventory
                                </a>
                                <a href="/user/team-purchases" class="btn btn-outline-primary btn-sm">
                                    Purchase History
                                </a>
                            </div>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <% if (!teamInfo) { %>
                            <p class="text-muted">You haven't been assigned to a team yet. Please contact an administrator.</p>
                        <% } else { %>
                            <div class="row">
                                <% teamMembers.forEach(member => { %>
                                    <div class="col-md-6 col-lg-4 mb-3">
                                        <div class="card <%= member.id === user.id ? 'border-primary' : '' %>">
                                            <div class="card-body">
                                                <h6 class="card-title">
                                                    <%= member.username %>
                                                    <% if (member.id === user.id) { %>
                                                        <span class="badge bg-primary">You</span>
                                                    <% } %>
                                                    <% if (member.role === 'team_leader') { %>
                                                        <span class="badge bg-success">Leader</span>
                                                    <% } %>
                                                </h6>
                                                <p class="card-text">
                                                    <small class="text-muted">Balance: $<%= member.balance %></small>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                            
                            <div class="mt-4">
                                <h6>Team Financial Summary</h6>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="card bg-success text-white">
                                            <div class="card-body text-center">
                                                <h5>$<%= financialData.earned + financialData.received %></h5>
                                                <small>Total Earned</small>
                                                <div class="mt-1">
                                                    <small>Codes: $<%= financialData.earned %></small><br>
                                                    <small>Donations: $<%= financialData.received %></small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-danger text-white">
                                            <div class="card-body text-center">
                                                <h5>$<%= financialData.spent %></h5>
                                                <small>Total Spent</small>
                                                <div class="mt-1">
                                                    <small>Purchases</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-warning text-dark">
                                            <div class="card-body text-center">
                                                <h5>$<%= financialData.donated %></h5>
                                                <small>Total Donated</small>
                                                <div class="mt-1">
                                                    <small>To Other Teams</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-primary text-white">
                                            <div class="card-body text-center">
                                                <h5>$<%= financialData.currentBalance %></h5>
                                                <small>Current Balance</small>
                                                <div class="mt-1">
                                                    <small>Available Now</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <h6>Team Members</h6>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5><%= teamMembers.length %></h5>
                                                <small>Total Members</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5>$<%= Math.round(financialData.currentBalance / teamMembers.length) %></h5>
                                                <small>Average Balance</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-light">
                                            <div class="card-body text-center">
                                                <h5><%= teamMembers.filter(m => m.role === 'team_leader').length %></h5>
                                                <small>Team Leaders</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function logout() {
            try {
                const response = await fetch('/auth/logout', { method: 'POST' });
                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Money Code Management - Church Retreat 2025</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar-brand { font-weight: bold; }
        .balance-badge { font-size: 1.1em; }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/navbar', { user: user }) %>

    <main class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Money Code Management</h2>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createCodeModal">
                        Generate New Codes
                    </button>
                </div>
                
                <div id="codes-alert"></div>
                
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Used By</th>
                                        <th>Created</th>
                                        <th>Used At</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% codes.forEach(code => { %>
                                        <tr class="<%= code.used_by ? 'table-light' : '' %>">
                                            <td>
                                                <code><%= code.code %></code>
                                            </td>
                                            <td>$<%= code.amount %></td>
                                            <td>
                                                <span class="badge bg-<%= code.used_by ? 'secondary' : 'success' %>">
                                                    <%= code.used_by ? 'Used' : 'Available' %>
                                                </span>
                                            </td>
                                            <td><%= code.used_by_username || '-' %></td>
                                            <td><%= formatDate(code.created_at) %></td>
                                            <td><%= code.used_at ? formatDate(code.used_at) : '-' %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Create Codes Modal -->
        <div class="modal fade" id="createCodeModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Generate Money Codes</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form id="createCodeForm">
                            <div class="mb-3">
                                <label for="amount" class="form-label">Amount per code ($)</label>
                                <input type="number" class="form-control" id="amount" name="amount" min="1" required>
                            </div>
                            <div class="mb-3">
                                <label for="quantity" class="form-label">Number of codes to generate</label>
                                <input type="number" class="form-control" id="quantity" name="quantity" min="1" max="50" value="1" required>
                                <small class="text-muted">Maximum 50 codes at once</small>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-success" onclick="generateCodes()">Generate Codes</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function generateCodes() {
            const form = document.getElementById('createCodeForm');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/admin/money-codes', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert(`Successfully generated ${result.generated} codes!`, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('createCodeModal')).hide();
                    form.reset();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert(result.error, 'danger');
                }
            } catch (error) {
                showAlert('Network error', 'danger');
            }
        }

        function showAlert(message, type) {
            const alertContainer = document.getElementById('codes-alert');
            alertContainer.innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
        }

        async function logout() {
            try {
                const response = await fetch('/auth/logout', { method: 'POST' });
                if (response.ok) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Logout error:', error);
            }
        }
    </script>
</body>
</html>
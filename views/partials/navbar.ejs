<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700&family=Noto+Serif+KR:wght@400;500;600&display=swap" rel="stylesheet">
<nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(45deg, #667eea, #764ba2);">
    <div class="container">
        <a class="navbar-brand" href="/" style="font-family: 'Noto Serif KR', serif; font-weight: 600; font-size: 1.3rem;">
            2025 말씀교회 여름수련회
            <small class="d-block" style="font-size: 0.7rem; opacity: 0.9; font-family: 'Noto Sans KR', sans-serif; font-weight: 400;">
                2025.07.31 - 08.02
            </small>
        </a>
        
        <% if (typeof user !== 'undefined' && user) { %>
            <div class="navbar-nav me-auto">
                <% if (user.role === 'admin') { %>
                    <a class="nav-link" href="/admin/dashboard">🎛️ 관리자</a>
                    <a class="nav-link" href="/admin/users">👥 사용자</a>
                    <a class="nav-link" href="/admin/teams">⭐ 팀 관리</a>
                    <a class="nav-link" href="/admin/products">🛍️ 상품</a>
                    <a class="nav-link" href="/admin/orders">📋 주문</a>
                    <a class="nav-link" href="/admin/money-codes">💰 머니코드</a>
                <% } else { %>
                    <a class="nav-link" href="/user/dashboard">🏠 대시보드</a>
                    <a class="nav-link" href="/store">🏪 상점</a>
                    <a class="nav-link" href="/user/team">👫 내 팀</a>
                <% } %>
            </div>
            
            <div class="d-flex align-items-center">
                <span class="badge bg-success balance-badge me-3">💰 $<%= user.balance %></span>
                <span class="text-white me-3" style="font-family: 'Noto Sans KR', sans-serif;">
                    <%= user.username %> 
                    <% if (user.team_name) { %>(<%= user.team_name %>)<% } %>
                </span>
                <button class="btn btn-outline-light" onclick="logout()" style="font-family: 'Noto Sans KR', sans-serif;">
                    🚪 로그아웃
                </button>
            </div>
        <% } %>
    </div>
</nav>